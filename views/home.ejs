<link rel="stylesheet" type="" href="/css/home.css">
<link rel="stylesheet" href="/css/chatbox.css">
<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <%if (locals.user){%>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name='content' rows="3" cols="30" placeholder="Type here..." required></textarea>
                <button type="submit"><p style="font-size:15px;margin:0">&#128540;</p>
</button>

            </form>
            <%}%>
                <div id="post-list-container">
                    <ul>
                        <%for (post of posts) {%>
                            <%-include('_post')-%>



                                <%}%>

                    </ul>
                </div>

    </section>
    <section id="users-friends">
        <h4>
            Friends
        </h4>
        <%for(u of all_users){%>
            <p>
                <a href="/users/profile/<%=u.id%>">
                    <%=u.name%>

                </a>
            </p>
            <%}%>
    </section>
    <%-include('_chatbox')-%>

</div>
<script src="/js/home_comment.js">
</script>
<script src="/js/home_posts.js">
</script>

<script src="/js/toggle_like.js">
</script>
<script>
    $('.toggle-like-button').each(function() {
        let self = this;
        let toggleLike = new ToggleLike(self);
    });
</script>
